{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Nossa biblioteca do curso JS com TDD na pratica",
  "main": "index.js",
  "scripts": {
    "build": "webpack --colors --progress",
    "watch": "npm rum build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run test:covarage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js -w --require babel-register",
    "test:covarage": "nyc npm test"
  },
  "nyc":{
    "functions":80,
    "lines":80,
    "check-coverage": true,
    "reporter": ["text","html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianosilvareis/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Adriano Reis <adriano_silvareis@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianosilvareis/js-tdd-course/issues"
  },
  "homepage": "https://github.com/adrianosilvareis/js-tdd-course#readme",
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "mocha": "^5.1.0",
    "nyc": "^11.6.0"
  },
  "dependencies": {}
}
